@model CourseProject.Models.gmail

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div>
    @using (Html.BeginForm("SendMessage", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <span class="col-lg-12" style="color:green">@ViewBag.Message</span>
        <br />
        <div class="col-lg-12">
            <label for="staticEmail" class="col-sm-2 col-form-label">To</label>
            <br />
            <div class="col-lg-12">
                @Html.TextBoxFor(model => model.To, new { Value = ViewBag.schoolKid.Login })
            </div>
        </div>
        <div class="col-lg-12">
            <label for="inputPassword" class="col-sm-2 col-form-label">Subject</label>
            <br />
            <div class="col-lg-12">
                @Html.TextBoxFor(model => model.Subject, new { Value = ViewBag.subject.Name })
            </div>
        </div>
        <br />
        <div class="col-lg-12">
            <div class="col-lg-12">
                @Html.TextAreaFor(model => model.Body, new { rows = "15", cols = "25", placeholder = "Text of message" })
            </div>
        </div>
        <input type="hidden" name="subjectId" value="@ViewBag.subject.Id" />
        <input type="hidden" name="schoolKidId" value="@ViewBag.schoolKid.Id" />
        <button type="submit" class="btn-success form-control col-sm-3">Send</button>
        <br />
    }
</div>
