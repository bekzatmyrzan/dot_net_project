@model CourseProject.Models.Grade

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Grade</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               
                <input class="form-control" type="number" name="Value" required />
            </div>
        </div>

        <div class="form-group">
            <label>SchoolKid</label>
            <div class="col-md-10">
                <input type="hidden" name="SchoolKidId" value="@ViewBag.schoolKid.Id" />
                <input class="form-control" type="text" value="@ViewBag.schoolKid.Name" readonly/>
            </div>
        </div>

        <div class="form-group">
            <label>Subject</label>
            <div class="col-md-10">
                <input type="hidden" name="SubjectId" value="@ViewBag.subject.Id" />
                <input class="form-control" type="text" value="@ViewBag.subject.Name" readonly/>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control" type="date" name="Date" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
